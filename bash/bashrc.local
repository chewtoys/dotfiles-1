#---------------------------------------------------------------
# Local (system) bashrc File
#---------------------------------------------------------------

# Skip this config if we aren't in bash
[[ -n "${BASH_VERSION}" ]] || return

#---------------------------------------------------------------
# Set Global Environment Variables
#---------------------------------------------------------------
#RUBY_MANAGER=

export EDITOR="/usr/local/opt/emacs/bin/emacsclient -nw"
export VISUAL="/usr/local/opt/emacs/bin/emacsclient -nw"

# Docker
export DOCKER_TLS_VERIFY=1
export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=/Users/juev/.boot2docker/certs/boot2docker-vm
export BYOBU_PREFIX=$(brew --prefix)

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

#---------------------------------------------------------------
# Set Host Prompt Color
#---------------------------------------------------------------
# The following color keywords are permitted:
#
# Normal colors
# black red green yellow blue magenta cyan white default
# 
# Emphasized (bolded) colors
# eblack ered egreen eyellow eblue emagenta ecyan ewhite
#---------------------------------------------------------------
PROMPT_COLOR=green

# If you want a different prompt color when logged in over SSH
REMOTE_PROMPT_COLOR=yellow

PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

#---------------------------------------------------------------
# Host ssh aliases
#---------------------------------------------------------------
#alias host="ssh host.domain.com"

alias pg='ps aux | grep -i'

alias ls='ls -pF --color=always'
alias ll='ls -lh'
alias la='ls -lah'
alias l='ls'

alias df='df -h'
alias du='du -h'

#heroku
#alias heroku='/usr/local/bin/heroku'

alias v='vim'
alias s='subl'

alias emacs='/usr/local/opt/emacs/bin/emacsclient -nw'
alias e='/usr/local/opt/emacs/bin/emacsclient -nw'
alias killemacs='/usr/local/opt/emacs/bin/emacsclient -nw --eval "(kill-emacs)"'

# rsync
alias pc="rsync -P"

alias g="grep --color=auto"

# brew update
alias update='brew update && brew upgrade --all && brew cleanup'

#fixopen osx finder
alias fixopenwith='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user'
