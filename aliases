alias v='vim'
alias s='subl'

alias emacs='/usr/local/Cellar/emacs/24.4/bin/emacs -nw'
alias emacsclient='/usr/local/Cellar/emacs/24.4/bin/emacsclient'
alias e='/usr/local/Cellar/emacs/24.4/bin/emacsclient -nw'

# rsync
alias pc="rsync -P"

# brew update
alias brewupd='brew update && brew upgrade && brew cleanup'

# suffix based aliases
alias -s {md,markdown}="open -a Marked"
alias -s {pdf,jpg,jpeg,png,gif}="open -a Preview"
alias -s djvu="open -a DjVuReader"

#fixopen osx finder
alias fixopenwith='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user'

