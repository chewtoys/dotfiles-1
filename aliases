alias pg='ps aux | grep -i'

alias l='ls'
alias ls='ls -Gh'
alias ll='ls -lGh'
alias la='ls -la'

alias df='df -h'
alias du='du -h'

# zsh profile editing
alias ze='$EDITOR ~/.zshrc'
alias zs='source ~/.zshrc'

# bundle alias
alias b="bundle"
alias bi="bundle install --path .bundle/gems --binstubs .bundle/bin"
alias bu="b update"
alias be="b exec"

